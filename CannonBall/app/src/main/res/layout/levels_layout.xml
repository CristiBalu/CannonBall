<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/levels_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coursework.mobile.cannonball.LevelsActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/first_level_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_button_height"
        android:text="@string/first_button_value"/>

    <Button
        android:id="@+id/second_level_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_button_height"
        android:text="@string/second_button_value"/>

    <Button
        android:id="@+id/third_level_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_button_height"
        android:text="@string/third_button_value"/>

    <Button
        android:id="@+id/fourth_level_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_button_height"
        android:text="@string/fourth_button_value"/>

    <Button
        android:id="@+id/fifth_level_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_button_height"
        android:text="@string/fifth_button_value"/>
    
</LinearLayout>
